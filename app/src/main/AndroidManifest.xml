<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doudou.cn.shoppingim" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
       >

        <!-- 欢迎界面-->
        <activity
            android:name="com.doudou.cn.shoppingim.ui.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--登陆界面-->
        <activity android:name="com.doudou.cn.shoppingim.ui.LoginActivity"/>
        <!-- 主界面-->
        <activity android:name="com.doudou.cn.shoppingim.ui.MainActivity"/>
    </application>

</manifest>
